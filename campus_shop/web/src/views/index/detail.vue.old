    <Footer/>
    <!-- 预约弹窗 -->
    <Modal
      v-model:open="showReserveModal"
      title="预约商品"
      @ok="handleReserve"
      @cancel="showReserveModal = false"
    >
      <div class="reserve-form">
        <div class="form-item">
          <label>预约时间：</label>
          <DatePicker
            v-model:value="reserveForm.reserve_time"
