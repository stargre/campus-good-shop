                    <div class="time">{{ item.create_time }}</div>
                  </div>
                  <div class="float-right">
                    <span @click="like(item.id)">点赞 <span class="num">{{ item.likes || 0 }}</span></span>
                  </div>
                </div>
                <div class="comment-content">{{ item.content }}</div>
              </div>
            </div>
          </div>
