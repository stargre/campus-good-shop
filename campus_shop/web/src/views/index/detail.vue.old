                <span 
                  :class="{ 'tab-select': sortIndex === 1 }"
                  @click="sortCommentList('hot')"
                >
                  最热
                </span>
              </div>
            </div>
            
            <div class="comments-list">
              <div class="comment-item" v-for="item in commentData" :key="item.id">
