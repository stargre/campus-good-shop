              <div class="img-view">
                <img :src="item.cover" :alt="item.title" />
              </div>
              <div class="info-view">
                <div class="product-name">{{ item.title }}</div>
                <div class="price">¥{{ item.price }}</div>
                <div class="translators">{{ item.location }}</div>
